      inset 0 0 20px var(--dark-shadow),
      0 10px 40px rgba(0, 0, 0, 0.9);
    padding: 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
  }

  /* Card style */
  .game-card {
    background: linear-gradient(145deg, #444, #2f2f2f);
    border-radius: 15px;
    box-shadow:
      0 4px 10px rgba(0,0,0,0.7),
      inset 0 0 10px var(--hemp-green);
    color: var(--light-grey);
    padding: 1.5rem;
    cursor: pointer;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .game-card:hover {
    transform: scale(1.05);
    box-shadow:
      0 0 20px var(--glow-green),
      inset 0 0 15px var(--glow-green);
  }

  /* Card header */
  .game-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: 1.2px;
  }

  /* Carbon hempcrete texture overlay */
  .game-card::before {
    content: '';
    position: absolute;
    top: -40%;
    left: -40%;
    width: 180%;
    height: 180%;
    background:
      repeating-radial-gradient(
        circle at center,
        transparent 0 4px,
        rgba(74,124,89,0.1) 5px 8px
      );
    transform: rotate(25deg);
    pointer-events: none;
    opacity: 0.25;
  }

  /* Game description */
  .game-desc {
    font-size: 1rem;
    line-height: 1.4;
    color: #a0a0a0;
  }

</style>
</head>
