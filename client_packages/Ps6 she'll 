  /* Root colors */
  :root {
    --hemp-green: #4a7c59;
    --concrete-grey: #2e2e2e;
    --light-grey: #bfbfbf;
    --dark-shadow: rgba(0,0,0,0.7);
    --glow-green: #79c267;
  }

  /* Body & container */
  body {
    margin: 0; padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: linear-gradient(135deg, var(--concrete-grey), #1a1a1a);
    color: var(--light-grey);
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .shell-container {
    width: 90vw;
    max-width: 1200px;
    background: linear-gradient(145deg, #3a3a3a, #2a2a2a);
